<% if user_signed_in? %>
  <%= form_for(comment) do |f| %>

  <div class="comment_body">

    <%= f.hidden_field :post_id %>
    <div class="form-group">
      <%= f.label :body, "Add comment" %>
      <%= f.text_area :body, class: "form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit "Create comment" %>
    </div>
  </div>


  <% end %>
<% end %>
